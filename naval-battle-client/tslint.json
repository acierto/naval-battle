{
  "extends": "tslint:recommended",
  "rulesDirectory": [
    "src",
    "tests"
  ],
  "rules": {
    "max-line-length": {
      "options": [
        120
      ]
    },
    "new-parens": true,
    "no-arg": true,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "no-console": {
      "severity": "default",
      "options": [
        "debug",
        "log",
        "time",
        "timeEnd",
        "trace"
      ]
    },
    "quotemark": [true, "single"]
  },
  "jsRules": {
    "max-line-length": {
      "options": [
        120
      ]
    }
  }
}
